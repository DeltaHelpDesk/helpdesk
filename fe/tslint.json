{
  "extends": ["tslint:recommended"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "src/graphql/types.ts",
      "src/graphql/*.js"
    ]
  },
  "rules": {
    "member-access": [true, "no-public"],
    "ordered-imports": [false],
    "object-literal-sort-keys": false,
    "no-console": false,
    "jsx-no-lambda": false
  },

  "jsRules": {
    "object-literal-sort-keys": false,
    "no-console": false
  }
}
